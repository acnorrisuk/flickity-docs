<!doctype html>
<html lang="en" class="{{#if isExport}}export{{/if}}">
<head>
  <meta charset="utf-8">
  <meta name="description" content="Touch, responsive, flickable carousels" />
  <meta name="viewport" content="width=device-width" />

  <title>Flickity{{#unless page.is_homepage}} &middot; {{page.title}}{{/unless}}</title>

  {{#if isDev}}
    {{#each css_paths}}
      <link rel="stylesheet" href="../{{this}}" />
    {{/each}}
  {{else}}
    <link rel="stylesheet" href="{{#if page.is_404}}/{{/if}}css/flickity-docs.css" media="screen" />
  {{/if}}

</head>
<body class="page--{{basename}}">

{{> site-nav}}

{{#if page.is_homepage}}
  {{> hero-carousel}}
{{/if}}

<div class="main">
  <div class="content-wrap">
    {{#if page.title}}
      <h1 class="page-title">{{page.title}}</h1>
    {{/if}}

    {{#if page.is_homepage}}
      {{> big-links}}
    {{/if}}

    <ul class="page-nav" data-js-module="page-nav"></ul>

{{! no leading whitespace because handlebars preserves it, messes with code blocks
https://github.com/wycats/handlebars.js/issues/858 }}
{{> body}}
  </div>
</div>

{{> site-nav}}

{{> site-footer}}

{{#if isDev}}
  {{#each js_paths}}
    <script src="../{{this}}"></script>
  {{/each}}
{{else}}
  <script src="{{#if page.is_404}}/{{/if}}js/flickity-docs.min.js"></script>
{{/if}}

{{#unless isExport}}

  <script>
    // Google Analytics
    (function(b,o,i,l,e,r){b.GoogleAnalyticsObject=l;b[l]||(b[l]=
    function(){(b[l].q=b[l].q||[]).push(arguments)});b[l].l=+new Date;
    e=o.createElement(i);r=o.getElementsByTagName(i)[0];
    e.src='//www.google-analytics.com/analytics.js';
    r.parentNode.insertBefore(e,r)}(window,document,'script','ga'));
    ga('create','UA-58739927-1','auto');ga('send','pageview');
  </script>


  {{! Twitter Ads analytics }}
  {{#if page.is_homepage}}
    <script src="//platform.twitter.com/oct.js"></script>
    <script>
    twttr.conversion.trackPid('l63wv', { tw_sale_amount: 0, tw_order_quantity: 0 });</script>
    <noscript>
    <img height="1" width="1" style="display:none;" alt="" src="https://analytics.twitter.com/i/adsct?txn_id=l63wv&p_id=Twitter&tw_sale_amount=0&tw_order_quantity=0" />
    <img height="1" width="1" style="display:none;" alt="" src="//t.co/i/adsct?txn_id=l63wv&p_id=Twitter&tw_sale_amount=0&tw_order_quantity=0" /></noscript>
  {{/if}}

{{/unless}}

</body>
</html>
